<div class="index"
  data-controller="filter nav mapbox"
  data-mapbox-location-value="<%= @coordinates_hash.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-action="filter->mapbox#filter coordinatesChanged->nav#coordinatesChanged">

  <%= render "shared/side_search_col" %>

  <div class="map" style="width:100%; height: 100vh;" data-mapbox-target="mapElement">
    <div class="localize-me-container d-flex justify-content-center align-items-center">
      <i class="fas fa-crosshairs localize-me" data-action="click->mapbox#localizeMe"></i>
    </div>
  </div>

</div>
