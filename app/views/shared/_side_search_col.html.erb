<div class="filter-column">
  <%= link_to root_path do %>
    <%= image_tag('logo.svg')%>
   <% end %>
  <h3>Catégories</h3>
    <div class="select-all" data-filter-target="selectButton" data-action="click->filter#selectAllCategories">Tout sélectionner</div>
  <div class="cat-items" >
    <% CategoryMapper::MAPPING.each do |category_id, category|  %>
      <%= check_box_tag category_id, category_id, false, class:"check", data: { "action" => "click->filter#update", 'filter-target' => 'category' } %><label for=<%= category_id %>><%= category['name'] %></label>
    <% end %>
  </div>
  <div class="itinary-card">
    <div class="itinary-title">
      <i class="fas fa-minus-circle" data-nav-target="clear" data-action='click->nav#clearList'></i>
      <h3>Itinéraire</h3>
      <a class="btn-nav" href="#" data-nav-target="navlink" target="_blank"><i class="fas fa-location-arrow"></i></a>
    </div>
    <p>Click sur <strong>+</strong> pour ajouter un producteur dans la liste de navigation</p>

    <ol data-nav-target='navlist'>
    </ol>
  </div>
</div>
